{
  "name": "ai-newsletter",
  "displayName": "AI Newsletter Generator",
  "description": "Generate newsletters using AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "ai-newsletter.start",
        "title": "Start Newsletter Generation",
        "icon": "$(play)",
        "category": "AI Newsletter"
      },
      {
        "command": "ai-newsletter.stop", 
        "title": "Stop Newsletter Generation",
        "icon": "$(debug-stop)",
        "category": "AI Newsletter"
      },
      {
        "command": "ai-newsletter.input",
        "title": "Provide Input",
        "icon": "$(edit)",
        "category": "AI Newsletter"
      },
      {
        "command": "ai-newsletter.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "ai-newsletter.start",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "true"
      },
      {
        "command": "ai-newsletter.input",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "true"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ai-newsletter.refresh",
          "when": "view == aiNewsletterSidebar",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "ai-newsletter-sidebar": [
        {
          "type": "webview",
          "id": "aiNewsletterSidebar",
          "name": "AI Newsletter Generator",
          "when": "true",
          "icon": "$(notebook)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-newsletter-sidebar",
          "title": "AI Newsletter Generator",
          "icon": "$(notebook)"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}